<!-- make this as lşke a table like box the features class name,#C8FFC8 Student Count, Description into one table and change the background color to C8FFC8 -->

@page
@model IndexModel
@{
    ViewData["Title"] = "Class Information System";
}

<style>
    body {
        background-color: #C8FFC8;
    }
    .card {
        background-color: white;
        border-radius: 10px;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">Class Information System</h1>
    
    <div class="row">
        <!-- Form Column -->
        <div class="col-md-6">
            <div class="card border-success shadow-lg">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Class Details</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="ClassInfo.Id" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="ClassInfo.ClassName" class="form-label">Class Name</label>
                            <input asp-for="ClassInfo.ClassName" class="form-control" />
                            <span asp-validation-for="ClassInfo.ClassName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ClassInfo.StudentCount" class="form-label">Student Count</label>
                            <input asp-for="ClassInfo.StudentCount" class="form-control" />
                            <span asp-validation-for="ClassInfo.StudentCount" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="ClassInfo.Description" class="form-label">Description</label>
                            <textarea asp-for="ClassInfo.Description" class="form-control" rows="3"></textarea>
                        </div>
                        
                        <div class="form-group">
                            @if (Model.ClassInfo.Id == 0)
                            {
                                <button type="submit" asp-page-handler="Add" class="btn btn-success">Add Class</button>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Edit" class="btn btn-warning">Update Class</button>
                                <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Table Column -->
        <div class="col-md-6">
            <div class="card border-success shadow-lg">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Class List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-success">
                                <tr>
                                    <th>ID</th>
                                    <th>Class Name</th>
                                    <th>Students</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Classes)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ClassName</td>
                                        <td>@item.StudentCount</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm">Delete</button>
                                                
                                                <a asp-page="/Index" 
                                                   asp-route-id="@item.Id"
                                                   asp-route-className="@item.ClassName"
                                                   asp-route-studentCount="@item.StudentCount"
                                                   asp-route-description="@item.Description"
                                                   class="btn btn-info btn-sm">Edit</a>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}